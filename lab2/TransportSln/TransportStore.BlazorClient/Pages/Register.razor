@page "/register"
@inject TransportStore.BlazorClient.Services.IAuthService AuthService
@inject NavigationManager Navigation

<h3>Реєстрація</h3>

<div class="row">
    <div class="col-md-4">
        <EditForm Model="@registerModel" OnValidSubmit="HandleRegistration">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="mb-3">
                <label>Логін</label>
                <InputText class="form-control" @bind-Value="registerModel.UserName" />
            </div>
            <div class="mb-3">
                <label>Email</label>
                <InputText class="form-control" @bind-Value="registerModel.Email" />
            </div>
            <div class="mb-3">
                <label>Пароль</label>
                <InputText type="password" class="form-control" @bind-Value="registerModel.Password" />
            </div>

            <button type="submit" class="btn btn-success">Зареєструватися</button>
            <a href="login" class="btn btn-secondary">Вже є акаунт?</a>
            
            @if (showError)
            {
                <div class="alert alert-danger mt-2">Помилка реєстрації. Можливо, такий користувач вже існує.</div>
            }
        </EditForm>
    </div>
</div>

@code {
    private RegisterDto registerModel = new RegisterDto();
    private bool showError = false;

    private async Task HandleRegistration()
    {
        var result = await AuthService.Register(registerModel);
        if (result)
        {
            Navigation.NavigateTo("/login");
        }
        else
        {
            showError = true;
        }
    }
}