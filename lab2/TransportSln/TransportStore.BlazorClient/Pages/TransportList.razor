@page "/transports"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@using TransportStore.BlazorClient.Models
@inject HttpClient Http
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3>Список транспорту</h3>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="CreateTransport">Додати новий</button>
</div>

@if (transports == null)
{
    <p><em>Завантаження даних...</em></p>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Тип</th>
                <th>Модель</th>
                <th>Ціна/год</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in transports)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Type</td>
                    <td>@item.Model</td>
                    <td>@item.PricePerHour.ToString("C")</td>
                    <td>
                        <button class="btn btn-warning btn-sm me-2" @onclick="() => EditTransport(item.Id)">Редагувати</button>
                        <button class="btn btn-danger btn-sm" @onclick="() => DeleteTransport(item.Id)">Видалити</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<TransportDto>? transports;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try 
        {
            transports = await Http.GetFromJsonAsync<List<TransportDto>>("api/products");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Помилка завантаження: {ex.Message}");
        }
    }

    private void CreateTransport()
    {
        Navigation.NavigateTo("/transport/edit");
    }

    private void EditTransport(long id)
    {
        Navigation.NavigateTo($"/transport/edit/{id}");
    }

    private async Task DeleteTransport(long id)
    {
        bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Ви дійсно хочете видалити транспорт з ID {id}?");
        
        if (confirmed)
        {
            var response = await Http.DeleteAsync($"api/products/{id}");
            if (response.IsSuccessStatusCode)
            {
                await LoadData(); 
            }
            else
            {
                Console.WriteLine("Не вдалося видалити запис.");
            }
        }
    }
}