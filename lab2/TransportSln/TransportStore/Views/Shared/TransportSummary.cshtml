@using TransportStore.Domain.Models
@model Transport

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Model
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.PricePerHour.ToString("c")</small>
            </span>
        </h4>
    </div>
    
    <div class="card-text p-1">@Model.Description</div>
    
    <form id="@Model.Id" asp-action="AddToCart" asp-controller="Cart" method="post">
        <input type="hidden" name="transportId" value="@Model.Id" />
        <input type="hidden" name="returnUrl" value="@(ViewContext.HttpContext.Request.Path + ViewContext.HttpContext.Request.QueryString)" />
        <span class="card-text p-1">
            <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right">
                Орендувати
            </button>
        </span>
    </form>
</div>