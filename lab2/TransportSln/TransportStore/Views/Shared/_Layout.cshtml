<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TransportStore</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body class="d-flex flex-column min-vh-100">
    
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/">TransportStore</a>
                
                <div class="ms-auto d-flex gap-2">
                    <a class="btn btn-sm btn-light" asp-controller="Cart" asp-action="Index" title="Ваш кошик">
                        <i class="fa fa-shopping-cart"></i>
                    </a>

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <a class="btn btn-sm btn-outline-light" asp-controller="Account" asp-action="Profile">
                            <i class="fa fa-user"></i> Кабінет
                        </a>
                        
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="btn btn-sm btn-warning" asp-controller="Admin" asp-action="Index">Адмін</a>
                        }

                        <a class="btn btn-sm btn-danger" asp-controller="Account" asp-action="Logout">Вийти</a>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-outline-light" asp-controller="Account" asp-action="Login">Вхід</a>
                        <a class="btn btn-sm btn-success" asp-controller="Account" asp-action="Register">Реєстрація</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4 flex-grow-1">
        <div class="row">
            <div class="col-md-3">
                @await Component.InvokeAsync("NavigationMenu")
            </div>
            
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
    </main>

    <footer class="text-center text-muted mt-4 p-3 border-top">
        &copy; 2025 - TransportStore - Всі права захищені
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>