@using TransportStore.Domain.Models
@model IEnumerable<Transport>

<h2>Панель адміністратора</h2>

<a asp-action="Edit" asp-route-id="0" class="btn btn-primary mb-3">Додати новий транспорт</a>

<table class="table table-striped table-bordered">
    <tr>
        <th>ID</th>
        <th>Тип</th>
        <th>Модель</th>
        <th>Ціна</th>
        <th>Дії</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Type</td>
            <td>@item.Model</td>
            <td>@item.PricePerHour.ToString("c")</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Деталі</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Редагувати</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Видалити</a>
            </td>
        </tr>
    }
</table>