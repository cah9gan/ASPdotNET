@using TransportStore.Domain.Models
@model Transport

<h2>@(Model.Id == 0 ? "Створення" : "Редагування") транспорту</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Type" class="form-label">Тип (Категорія)</label>
        <input asp-for="Type" class="form-control" />
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Model" class="form-label">Модель</label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PricePerHour" class="form-label">Ціна за годину</label>
        <input asp-for="PricePerHour" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="PricePerHour" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Опис</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Зберегти</button>
    <a asp-action="Index" class="btn btn-secondary">Скасувати</a>
</form>