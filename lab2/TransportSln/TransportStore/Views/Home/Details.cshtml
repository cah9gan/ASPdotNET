@model Transport

<div class="container mt-4">
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h2>@Model.Model <small>(@Model.Type)</small></h2>
        </div>
        <div class="card-body">
            <h4 class="card-title text-success">@Model.PricePerHour.ToString("c") / год.</h4>
            <p class="card-text">@Model.Description</p>
            
            <div class="mt-3">
                <form asp-action="AddToCart" asp-controller="Cart" method="post" class="d-inline">
                    <input type="hidden" name="transportId" value="@Model.Id" />
                    <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                    <button type="submit" class="btn btn-success">Орендувати</button>
                </form>
                <a asp-action="Index" class="btn btn-secondary">Назад до списку</a>
            </div>
        </div>
    </div>

    <!-- Секція відгуків -->
    <h3>Відгуки користувачів</h3>
    <hr />

    @if (Model.Reviews != null && Model.Reviews.Any())
    {
        @foreach (var r in Model.Reviews.OrderByDescending(x => x.Date))
        {
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title">@r.User</h5>
                        <span class="badge bg-warning text-dark">Оцінка: @r.Rating/5</span>
                    </div>
                    <p class="card-text">@r.Comment</p>
                    <small class="text-muted">@r.Date.ToString("g")</small>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">Поки що немає відгуків. Будьте першим!</div>
    }

    <!-- Форма додавання відгуку -->
    <div class="card bg-light mt-4 mb-5">
        <div class="card-body">
            <h4>Залишити відгук</h4>
            <form asp-action="AddReview" method="post">
                <input type="hidden" name="TransportId" value="@Model.Id" />

                <div class="mb-3">
                    <label class="form-label">Ваше ім'я</label>
                    <input name="User" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Оцінка (1-5)</label>
                    <select name="Rating" class="form-select">
                        <option value="5">5 - Відмінно</option>
                        <option value="4">4 - Добре</option>
                        <option value="3">3 - Нормально</option>
                        <option value="2">2 - Погано</option>
                        <option value="1">1 - Жахливо</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Коментар</label>
                    <textarea name="Comment" class="form-control" rows="3" required></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Надіслати</button>
            </form>
        </div>
    </div>
</div>