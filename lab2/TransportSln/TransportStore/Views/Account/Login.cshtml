@model TransportStore.Models.ViewModels.LoginModel

<div class="container mt-5" style="max-width: 400px;">
    <h2 class="text-center">Вхід</h2>
    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="Login" method="post">
        <input type="hidden" asp-for="ReturnUrl" />
        
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Логін</label>
            <input asp-for="Name" class="form-control" />
        </div>
        
        <div class="mb-3">
            <label asp-for="Password" class="form-label">Пароль</label>
            <input asp-for="Password" type="password" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary w-100">Увійти</button>
    </form>
    
    <div class="mt-3 text-center">
        <a asp-action="Register">Зареєструватися</a>
    </div>
</div>